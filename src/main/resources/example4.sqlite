CREATE TABLE MOBILE_SUPPORT_DETAIL(
   WILDFIRE_RESOURCE_ID INTEGER PRIMARY KEY,
   PRODUCT_TYPE_CODE TEXT NOT NULL,
   RESOURCE_TYPE_CODE TEXT NOT NULL,
   VEHICLE_TYPE_CODE TEXT,
   CAPACITY INTEGER NOT NULL,

   FOREIGN KEY (WILDFIRE_RESOURCE_ID)
      REFERENCES WILDFIRE_RESOURCE (WILDFIRE_RESOURCE_ID)
         ON DELETE CASCADE
         ON UPDATE NO ACTION,

   FOREIGN KEY (VEHICLE_TYPE_CODE)
      REFERENCES VEHICLE_TYPE (VEHICLE_TYPE_CODE)
         ON DELETE CASCADE
         ON UPDATE NO ACTION,

   FOREIGN KEY (PRODUCT_TYPE_CODE, RESOURCE_TYPE_CODE)
      REFERENCES RESOURCE (PRODUCT_TYPE_CODE, RESOURCE_TYPE_CODE)
         ON UPDATE NO ACTION
         ON DELETE CASCADE
);
